CC=gcc

umake: umake.o arg_parse.o linetype.o
	gcc -o umake-new umake.o arg_parse.o targets.o linetype.o
	mv -i -f umake-new umake

umake.o: umake.c arg_parse.h
	${CC} -c umake.c

arg_parse.o: arg_parse.c arg_parse.h
	gcc -c arg_parse.c

targets.o: targets.c targets.h
	gcc -c targets.c

linetype.o: linetype.c linetype.h
	gcc -c linetype.c

install: umake
	cp -p -f umake /home/${USER}/bin/umake

who:
	echo The user is ${USER}.
